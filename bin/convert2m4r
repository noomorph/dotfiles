#!/usr/bin/env bash
set -euo pipefail

show_help() {
  cat <<EOF
convert2m4r - Convert MP3/MP4 to iPhone-compatible .m4r ringtone

Usage:
  convert2m4r input.mp3 [title]

Arguments:
  input         Input audio or video file (MP3/MP4)
  title         Optional. Title to embed in metadata. Defaults to filename.

Output:
  Generates a 30-second .m4r ringtone file for use on iPhone.

Example:
  convert2m4r my-audio.mp3 "Morning Tune"
EOF
}

# Show help if no args or --help/-h
if [[ $# -lt 1 || "$1" == "--help" || "$1" == "-h" ]]; then
  show_help
  exit 0
fi

INPUT="$1"
if [[ ! -f "$INPUT" ]]; then
  echo "âŒ Input file not found: $INPUT" >&2
  exit 2
fi

TITLE="${2:-$(basename "$INPUT")}"
TITLE="${TITLE%.*}"
BASENAME="${TITLE// /_}.m4r"

echo "ðŸŽ§ Converting '$INPUT' â†’ '$BASENAME' with title '$TITLE'..."

ffmpeg -hide_banner -loglevel error \
  -i "$INPUT" \
  -t 30 \
  -c:a aac -b:a 128k -vn \
  -f ipod \
  -metadata title="$TITLE" \
  "$BASENAME"

echo "âœ… Ringtone saved as '$BASENAME'"
echo "ðŸ“² Drag it into your iPhone in Finder to install it as a ringtone."
